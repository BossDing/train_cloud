.archives {
  background: rgba(225,225,255,0.75);
}
.archives .staff {
  height: 400rpx;
  border-bottom: 1rpx dashed #c8c7cc;
  background: #fff;
  margin-bottom: 40rpx;
}
.archives .staff .header {
  height: 200rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.archives .staff .header .avatar {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.archives .staff .header .avatar .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.archives .staff .header .name {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  font-size: 48rpx;
  padding-left: 20rpx;
}
.archives .staff .info {
  padding-left: 40rpx;
  color: #666;
}
.archives .staff .info .account {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.archives .staff .info .password {
  height: 80rpx;
  position: relative;
}
.archives .staff .info .password .label {
  position: absolute;
  top: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.archives .staff .info .password .label .input {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
}
.archives .staff .info .password .label .input.focus {
  border: 1rpx solid #007aff;
  padding-left: 20rpx;
}
.archives .staff .info .password .icon {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #999;
}

