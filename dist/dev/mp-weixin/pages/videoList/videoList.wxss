.video-list {
  height: 100vh;
}
.video-list .list {
  height: 100%;
  background: #fff;
  overflow: auto;
}
.video-list .list .item {
  padding: 80rpx auto 40rpx;
  height: 600rpx;
  border-bottom: 1rpx dashed #c8c7cc;
  margin-bottom: 40rpx;
}
.video-list .list .item .img {
  display: block;
  width: 100%;
  height: 520rpx;
}
.video-list .list .item .desc {
  font-size: 40rpx;
  color: #666;
  text-align: center;
  line-height: 80rpx;
}

