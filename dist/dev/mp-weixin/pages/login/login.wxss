.login {
  color: #fff;
  background: url("https://cccodedu.oss-cn-shanghai.aliyuncs.com/upload/image/202003/login_bg.jpg") center center no-repeat;
  background-size: cover;
}
.login .title {
  font-size: 64rpx;
  padding: 60rpx 0 20vh;
  text-shadow: 0 0 20rpx 20rpx #333;
}
.login .row {
  width: 80%;
  height: 80rpx;
  border-radius: 80rpx;
  margin: 40rpx auto;
  background: #fff;
  position: relative;
}
.login .row .icon {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
}
.login .row .input {
  display: block;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 80rpx;
  right: 20rpx;
  bottom: 0;
  font-size: 36rpx;
  color: #666;
}
.login .btn {
  width: 80%;
  margin: 120rpx auto 0;
}
.login .btn .login-btn {
  background: uni-bg-color-primary;
}

